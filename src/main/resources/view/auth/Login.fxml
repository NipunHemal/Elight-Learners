<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../style/auth/login.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.elight_driving_school.controller.auth.LoginController">
    <HBox alignment="CENTER" spacing="0.0">
        <children>
            <!-- Left Panel - Login Form -->
            <VBox alignment="CENTER" prefHeight="600.0" prefWidth="500.0" styleClass="left-panel">
                <children>
                    <VBox alignment="CENTER" maxWidth="350.0" spacing="30.0">
                        <children>
                            <!-- Header -->
                            <VBox alignment="CENTER" spacing="10.0">
                                <children>
                                    <Label styleClass="welcome-title" text="Welcome back!" />
                                    <Label styleClass="subtitle" text="Simplify your workflow and boost your productivity" />
                                    <HBox alignment="CENTER" spacing="5.0">
                                        <children>
                                            <Label styleClass="subtitle" text="with " />
                                            <Label styleClass="app-name" text="Tuga's App" />
                                            <Label styleClass="subtitle" text=". Get started for free." />
                                        </children>
                                    </HBox>
                                </children>
                            </VBox>

                            <!-- Login Form -->
                            <VBox alignment="CENTER" spacing="20.0">
                                <children>
                                    <TextField fx:id="usernameField" promptText="Username" styleClass="input-field" />
                                    <VBox spacing="8.0">
                                        <children>
                                            <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />
                                            <HBox alignment="CENTER_RIGHT">
                                                <children>
                                                    <Hyperlink styleClass="forgot-password" text="Forgot Password?" />
                                                </children>
                                            </HBox>
                                        </children>
                                    </VBox>
                                    <Button mnemonicParsing="false" onAction="#onLogin" prefHeight="50.0" prefWidth="350.0" styleClass="login-button" text="Login" />
                                </children>
                            </VBox>

                            <!-- Register Link -->
                            <HBox alignment="CENTER" spacing="5.0">
                                <children>
                                    <Label styleClass="register-text" text="Not a member?" />
                                    <Hyperlink styleClass="register-link" text="Register now" />
                                </children>
                            </HBox>
                        </children>
                        <VBox.margin>
                            <Insets />
                        </VBox.margin>
                    </VBox>
                </children>
                <padding>
                    <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                </padding>
            </VBox>

            <!-- Right Panel - Illustration -->
            <VBox alignment="CENTER" prefHeight="600.0" prefWidth="500.0" styleClass="right-panel">
                <children>
                    <VBox alignment="CENTER" spacing="40.0">
                        <children>
                            <!-- Illustration Area -->
                            <StackPane prefHeight="300.0" prefWidth="350.0">
                                <children>
                                    <!-- Background circles for floating avatars -->
                                    <Circle fill="#e8f5e8" opacity="0.3" radius="150.0" />

                                    <!-- Main character illustration -->
                                    <VBox alignment="CENTER" spacing="10.0">
                                        <children>
                                            <StackPane prefHeight="120.0" prefWidth="120.0">
                                                <children>
                                                    <Circle fill="#90c695" radius="60.0" />
                                                    <Label styleClass="main-character" text="â™¡" />
                                                </children>
                                            </StackPane>

                                            <!-- Task card -->
                                            <StackPane styleClass="task-card">
                                                <children>
                                                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                                                        <children>
                                                            <VBox spacing="5.0">
                                                                <children>
                                                                    <Label styleClass="task-title" text="Canva Design" />
                                                                    <Label styleClass="task-count" text="10 Task" />
                                                                </children>
                                                            </VBox>
                                                            <Region HBox.hgrow="ALWAYS" />
                                                            <StackPane styleClass="progress-circle">
                                                                <children>
                                                                    <Circle fill="transparent" radius="20.0" stroke="#90c695" strokeWidth="3.0" />
                                                                    <Label styleClass="progress-text" text="84%" />
                                                                </children>
                                                            </StackPane>
                                                            <Button styleClass="design-button" text="Design" />
                                                        </children>
                                                    </HBox>
                                                </children>
                                                <padding>
                                                    <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                                                </padding>
                                            </StackPane>
                                        </children>
                                    </VBox>

                                    <!-- Floating avatars -->
                                    <Circle fill="#f0f0f0" radius="25.0" StackPane.alignment="TOP_LEFT">
                                        <StackPane.margin>
                                            <Insets left="50.0" top="30.0" />
                                        </StackPane.margin>
                                    </Circle>
                                    <Circle fill="#f0f0f0" radius="25.0" StackPane.alignment="TOP_RIGHT">
                                        <StackPane.margin>
                                            <Insets right="50.0" top="50.0" />
                                        </StackPane.margin>
                                    </Circle>
                                    <Circle fill="#f0f0f0" radius="25.0" StackPane.alignment="BOTTOM_RIGHT">
                                        <StackPane.margin>
                                            <Insets bottom="50.0" right="80.0" />
                                        </StackPane.margin>
                                    </Circle>
                                </children>
                            </StackPane>

                            <!-- Bottom text -->
                            <VBox alignment="CENTER" spacing="8.0">
                                <children>
                                    <Label styleClass="bottom-text" text="Make your work easier and organized" />
                                    <HBox alignment="CENTER" spacing="5.0">
                                        <children>
                                            <Label styleClass="bottom-text" text="with " />
                                            <Label styleClass="app-name-right" text="Tuga's App" />
                                        </children>
                                    </HBox>
                                </children>
                            </VBox>
                        </children>
                    </VBox>
                </children>
                <padding>
                    <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                </padding>
            </VBox>
        </children>
    </HBox>
</AnchorPane>
