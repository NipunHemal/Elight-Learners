<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../../style/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.elight_driving_school.controller.component.form.PaymentFormController">

    <VBox alignment="TOP_CENTER" spacing="0" styleClass="root" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
        </padding>

        <!-- Form Header -->
        <VBox spacing="0" styleClass="arrow">
            <Label fx:id="lblFormTitle" styleClass="form-title" text="Create Payment" />
            <Label fx:id="lblFormSubTitle" styleClass="form-subtitle" text="Please fill in the information below to add the payment" />
            <VBox spacing="6">
                <children>
                    <Label styleClass="field-label" text="Payment Date" />
                    <DatePicker fx:id="paymentDatePicker" promptText="Select your payment date" styleClass="modern-datepicker" />
                </children>
            </VBox>
        </VBox>

        <!-- Personal Information Section -->
        <VBox spacing="16" styleClass="mb-32">

            <!-- Name Fields Row -->
            <HBox spacing="16" />

            <!-- Email Field -->
            <VBox spacing="6">
                <Label styleClass="field-label" text="Amount" />
                <TextField fx:id="txtAmount" promptText="Amount" styleClass="modern-input" />
                <Label fx:id="emailError" managed="false" styleClass="error-text" text="Please enter a valid email address" visible="false" />
            </VBox>
            <HBox>
                <children>
                    <VBox spacing="6">
                        <children>
                            <Label styleClass="field-label" text="Payment method" />
                            <ComboBox fx:id="cmbPaymentMethod" promptText="Select Payment method" styleClass="modern-combo" visibleRowCount="20" VBox.vgrow="ALWAYS" />
                        </children>
                    </VBox>
                    <VBox spacing="6">
                        <children>
                            <Label styleClass="field-label" text="StudentId" />
                            <ComboBox fx:id="cmbStudentId" prefWidth="193.0" promptText="Select Student Id" styleClass="modern-combo" visibleRowCount="20" VBox.vgrow="ALWAYS" />
                        </children>
                        <HBox.margin>
                            <Insets left="112.0" />
                        </HBox.margin>
                    </VBox>
                </children>
            </HBox>

            <!-- Phone Field -->
            <VBox spacing="6">
                <Label styleClass="field-label" text="Status" />
                <TextField fx:id="txtStatus" promptText="Enter Status" styleClass="modern-input" />
            </VBox>
        </VBox>

        <!-- Action Buttons -->
        <HBox alignment="CENTER_RIGHT" spacing="16" styleClass="mt-24">
            <Button fx:id="cancelButton" mnemonicParsing="false" styleClass="btn-secondary" text="Cancel" />
            <Button fx:id="clearButton" mnemonicParsing="false" styleClass="btn-secondary" text="Clear Form" />
            <Button fx:id="saveButton" mnemonicParsing="false" styleClass="btn-primary" text="Create Payment" />
        </HBox>
    </VBox>
</AnchorPane>