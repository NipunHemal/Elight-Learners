<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>



 <VBox alignment="TOP_CENTER" spacing="0" styleClass="root" stylesheets="@../../../style/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.elight_driving_school.controller.component.form.StudentFormController">

     <!-- Form Header -->
     <VBox spacing="0" styleClass="arrow">
         <Label fx:id="lblFormTitle" styleClass="form-title" text="Create Student" />
     </VBox>

     <!-- Personal Information Section -->
     <VBox spacing="16">

         <!-- Name Fields Row -->
         <HBox spacing="16">
             <VBox spacing="6" HBox.hgrow="ALWAYS">
                 <Label styleClass="field-label" text="First name" />
                 <TextField fx:id="txtFirstName" promptText="Enter First Name" styleClass="modern-input" />
             </VBox>
         </HBox>

         <!-- Email Field -->
         <VBox spacing="6">
             <Label styleClass="field-label" text="Last name" />
             <TextField fx:id="txtLastName" promptText="Enter Lastr Name" styleClass="modern-input" />
             <Label fx:id="emailError" managed="false" styleClass="error-text" text="Please enter a valid email address" visible="false" />
         </VBox>

         <!-- Phone Field -->
         <VBox spacing="6">
             <Label styleClass="field-label" text="Email" />
             <TextField fx:id="txtEmail" promptText="Enter Email" styleClass="modern-input" />
         </VBox>
         <VBox spacing="6">
             <children>
                 <Label styleClass="field-label" text="Contact" />
                 <TextField fx:id="txtContact" promptText="Enter Contact" styleClass="modern-input" />
             </children>
         </VBox>
         <VBox spacing="6">
             <children>
                 <Label styleClass="field-label" text="Address" />
                 <TextField fx:id="txtAddress" promptText="Enter Address" styleClass="modern-input" />
             </children>
         </VBox>
         <HBox>
             <children>
                 <VBox spacing="6">
                     <children>
                         <Label styleClass="field-label" text="Date of Birth" />
                         <DatePicker fx:id="dobPicker" promptText="Select your date of birth" styleClass="modern-datepicker" />
                     </children>
                 </VBox>
                 <VBox spacing="6">
                     <children>
                         <Label styleClass="field-label" text="Registation Date" />
                         <DatePicker fx:id="registstaionDatePicker" promptText="Select your registation date" styleClass="modern-datepicker" />
                     </children>
                     <HBox.margin>
                         <Insets left="40.0" />
                     </HBox.margin>
                 </VBox>
             </children>
         </HBox>
     </VBox>
 </VBox>
