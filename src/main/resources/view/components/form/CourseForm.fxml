<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="0" styleClass="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.elight_driving_school.controller.component.form.CourseFormController">

                        <!-- Form Header -->
      <VBox spacing="0" styleClass="arrow">
          <Label fx:id="lblFormTitle" styleClass="form-title" text="Create Course" />
      </VBox>

                        <!-- Personal Information Section -->
      <VBox spacing="16">

                            <!-- Name Fields Row -->
          <HBox spacing="16">
              <VBox spacing="6" HBox.hgrow="ALWAYS">
                  <Label styleClass="field-label" text="Course Name" />
                  <TextField fx:id="txtCourseName" promptText="Enter Course Name" styleClass="modern-input" />
              </VBox>
          </HBox>

                            <!-- Email Field -->
          <VBox spacing="6">
              <Label styleClass="field-label" text="Duration" />
              <TextField fx:id="txtDuration" promptText="Course Duration ( 3 months )" styleClass="modern-input" />
              <Label fx:id="emailError" managed="false" styleClass="error-text" text="Please enter a valid email address" visible="false" />
          </VBox>

                            <!-- Phone Field -->
          <VBox spacing="6">
              <Label styleClass="field-label" text="Course Free" />
              <TextField fx:id="txtFree" promptText="Enter Course Free" styleClass="modern-input" />
          </VBox>
      <VBox spacing="6">
         <children>
            <Label styleClass="field-label" text="Description" />
            <TextField fx:id="txtDescription" promptText="Enter Description" styleClass="modern-input" />
         </children>
      </VBox>

                            <!-- Date of Birth -->
          <VBox spacing="6">
         <children>
                 <Label styleClass="field-label" text="Instrucrure" />
                 <ComboBox fx:id="cmbInstrucre" promptText="Select Instructor" styleClass="modern-combo" visibleRowCount="20" VBox.vgrow="ALWAYS" />
         </children>
          </VBox>
      </VBox>
   <stylesheets>
      <URL value="@../../../style/style.css" />
      <URL value="@../../../style/component/form.css" />
   </stylesheets>
 </VBox>
