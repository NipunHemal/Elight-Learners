<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.elight_driving_school.controller.component.TableController">
    <VBox styleClass="main-container">

        <!-- Breadcrumb -->
        <HBox styleClass="breadcrumb-container" />

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" styleClass="header-container">
            <Label styleClass="page-title" text="Members (1000)" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Add member">
            <styleClass>
               <String fx:value="add-member-btn" />
               <String fx:value="bg-blue" />
               <String fx:value="txt-white" />
            </styleClass>
            <graphic>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="txt-white" text="âž•" />
            </graphic></Button>
        </HBox>

        <!-- Search and Filter Bar -->
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="filter-container">
            <!-- Search Box -->
            <HBox alignment="CENTER_LEFT" styleClass="search-container">
                <Label styleClass="search-icon" text="ðŸ”" />
                <TextField promptText="Search" styleClass="search-field" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Roles Filter -->
            <ComboBox promptText="Roles" styleClass="filter-dropdown" />

            <Region HBox.hgrow="ALWAYS" />
        </HBox>

        <!-- Table -->
        <TableView fx:id="membersTable" styleClass="members-table">
            <columns>
                <!-- Checkbox Column -->
                <TableColumn prefWidth="40" styleClass="checkbox-column">
                    <graphic>
                        <CheckBox styleClass="header-checkbox" />
                    </graphic>
                </TableColumn>

                <!-- Account Column -->
                <TableColumn prefWidth="250" styleClass="account-column" text="Account">
                    <cellFactory>
<!--                        <fx:reference source="accountCellFactory" />-->
                    </cellFactory>
                </TableColumn>

                <!-- Projects Column -->
                <TableColumn prefWidth="80" styleClass="projects-column" text="Projects" />

                <!-- Access Expires Column -->
                <TableColumn prefWidth="120" styleClass="expires-column" text="Access expires" />

                <!-- Role Column -->
                <TableColumn prefWidth="180" styleClass="role-column" text="Role">
                    <cellFactory>
<!--                        <fx:reference source="roleCellFactory" />-->
                    </cellFactory>
                </TableColumn>

                <!-- Expiration Column -->
                <TableColumn prefWidth="100" styleClass="expiration-column" text="Expiration" />

                <!-- Actions Column -->
                <TableColumn prefWidth="60" styleClass="actions-column">
                    <cellFactory>
<!--                        <fx:reference source="actionsCellFactory" />-->
                    </cellFactory>
                </TableColumn>

                <!-- Delete Column -->
                <TableColumn prefWidth="60" styleClass="delete-column">
                    <cellFactory>
<!--                        <fx:reference source="deleteCellFactory" />-->
                    </cellFactory>
                </TableColumn>
            </columns>
        </TableView>

    </VBox>
   <stylesheets>
      <URL value="@../../style/component/table.css" />
      <URL value="@../../style/main.css" />
   </stylesheets>

</AnchorPane>
