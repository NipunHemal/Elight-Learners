<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.elight_driving_school.controller.pages.StudentController">
    <children>
        <Label layoutX="252.0" layoutY="182.0" prefHeight="35.0" prefWidth="94.0" text="Instructor">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
    </children>
    <VBox styleClass="main-container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Breadcrumb -->
        <HBox styleClass="breadcrumb-container" />

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" styleClass="header-container">
            <Label fx:id="txtCourseCount" styleClass="page-title" text="Student(1000)" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#btnAddOnAction" text="Add member">
                <styleClass>
                    <String fx:value="add-member-btn" />
                    <String fx:value="btn-lg" />
                    <String fx:value="bg-blue" />
                    <String fx:value="txt-white" />
                </styleClass>
                <graphic>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="txt-white" text="➕" />
                </graphic></Button>
        </HBox>

        <!-- Search and Filter Bar -->
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="filter-container">
            <!-- Search Box -->
            <HBox alignment="CENTER_LEFT" styleClass="search-container">
                <Label styleClass="search-icon" text="🔍" />
                <TextField fx:id="tstSearch" promptText="Search" styleClass="search-field" HBox.hgrow="ALWAYS" />
            </HBox>

            <Region HBox.hgrow="ALWAYS" />
        </HBox>

        <!-- Table -->
        <TableView fx:id="tableStudent" styleClass="members-table" VBox.vgrow="ALWAYS">
            <columns>
                <!-- Checkbox Column -->
                <TableColumn fx:id="colId" prefWidth="40" styleClass="checkbox-column" text="Id" />

                <!-- Account Column -->
                <TableColumn fx:id="colFirstname" prefWidth="100.0" styleClass="account-column" text="First name">
                    <cellFactory>
                        <!--                        <fx:reference source="accountCellFactory" />-->
                    </cellFactory>
                </TableColumn>
                <TableColumn fx:id="colLastname" prefWidth="100.0" text="last name" />

                <!-- Projects Column -->
                <TableColumn fx:id="colEmail" minWidth="100.0" prefWidth="100.0" styleClass="projects-column" text="emai" />

                <!-- Access Expires Column -->
                <TableColumn fx:id="colPhone" prefWidth="120" styleClass="expires-column" text="phone" />

                <!-- Actions Column -->
                <TableColumn fx:id="colAddress" prefWidth="100.0" styleClass="actions-column" text="address">
                    <cellFactory>
                        <!--                        <fx:reference source="actionsCellFactory" />-->
                    </cellFactory>
                </TableColumn>
                <TableColumn fx:id="colDob" prefWidth="75.0" text="dob" />
                <TableColumn fx:id="colRegDate" prefWidth="75.0" text="registation date" />
            <TableColumn fx:id="colCourseId" prefWidth="75.0" text="Course id" />

                <!-- Delete Column -->
                <TableColumn fx:id="colAction" prefWidth="60" styleClass="delete-column" text="Action">
                    <cellFactory>
                        <!--                        <fx:reference source="deleteCellFactory" />-->
                    </cellFactory>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

    </VBox>
   <stylesheets>
      <URL value="@../../style/main.css" />
      <URL value="@../../style/component/table.css" />
   </stylesheets>
</AnchorPane>
